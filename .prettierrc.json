{
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"arrowParens": "avoid",
	"proseWrap": "always",
	"plugins": ["prettier-plugin-tailwindcss", "@prettier/plugin-php", "@shufo/prettier-plugin-blade"],
	"overrides": [
		{
			"files": ["*.blade.php"],
			"options": {
				"parser": "blade",
				"tabWidth": 1
			}
		}
	],
	"wrapAttributes": "force",
	"sortHtmlAttributes": "code-guide"
}
